<Window x:Class="qwe.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:qwe"
        mc:Ignorable="d"
        Title="Auth" Height="300" Width="450">
    <Grid>
        <StackPanel>
            <TextBox x:Name="LoginTB" Margin="40,20" Height="40" FontSize="20" TextAlignment="Center"  />
            <PasswordBox x:Name="PassPB" Margin="40,20" Height="40" FontSize="20"  />
            <Button x:Name="AuthBT" Margin="40" Content="Войти" Click="AuthBT_Click"/>
        </StackPanel>
    </Grid>
</Window>
